@import "job-list-template/job-list-template.wxss";

.swiperBox{
  height: 340rpx;
}
.swiper{
  width: 100%;
  height: 340rpx;
}
.swiper image{
  width: 100%;
  height: 340rpx;
}
.tarBox{
  height: 164rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solid #efefef;
  padding-top: 2rpx;
  box-sizing: border-box;
}
.singleBar{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
}
.logoBox{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
}
.barName{
  margin-top: 2px;
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #404040;
}
.goodJob{
  height: 50rpx;
  text-align: center;
  background: #f7f7f7;
  font-size: 28rpx;
  line-height: 50rpx;
}
.jobList{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

